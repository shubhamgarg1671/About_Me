    <ImageView
        android:layout_width="251.02dp"
        android:layout_height="229.45dp"
        android:layout_marginLeft="55.98dp"
        android:layout_marginTop="19.27dp"
        android:src="@drawable/ic_group_14431"
        android:layout_marginStart="55.98dp" />

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="327dp"
        android:layout_height="52dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="24dp"
