<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addToBio">
    <ImageButton
        android:id="@+id/backButtonAdd_to_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_add_to_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:textColor="#0B040C"
        android:text="Add to Bio"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButtonAdd_to_bio"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/copy_link_card"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@+id/text_add_to_bio"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1"
            android:layout_margin="36dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to copy your link"
            android:textColor="#185CB3"
            android:textSize="14sp"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="24dp"
            android:text="AboutMe/deepak"
            android:background="@drawable/my_button"
            android:layout_gravity="bottom"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@+id/copy_link_card">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Step 2"
                android:layout_margin="24dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#AAAAAA"/>
            <TextView
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Paste your link into the website section of your profile"
                android:textColor="#185CB3"
                android:gravity="center"
                android:layout_margin="24dp"
                android:textSize="14sp"/>

            <
                android:layout_width="match_parent"
                android:layout_height="41dp"

                android:layout_margin="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
            </>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
 </androidx.constraintlayout.widget.ConstraintLayout>